<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  </head>

  <body class="d-flex flex-column vh-100 mx-auto">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <table class="table table-striped">
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                 <% if admin_signed_in? %>
                 <li class="nav-item">
                  <%= link_to admin_items_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-home"></i>商品一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_customers_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-users"></i>会員一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to  admin_orders_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-book-open"></i>注文履歴一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to admin_genres_path,　class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-out-alt"></i>ジャンル一覧
                  <% end %>
                 <li class="nav-item">
                  <%= link_to destroy_admin_session_path, method: :delete,  class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-out-alt"></i>ログアウト
                  <% end %>
                 <% elsif customer_signed_in? %>
                  <li class="nav-item">
                  <%= link_to customer_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-home"></i>マイページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to items_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-users"></i>商品一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to cart_items_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-book-open"></i>カート
                  <% end %>
                </li>
                 <li class="nav-item">
                  <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-out-alt"></i>ログアウト
                  <% end %>
                 <% else %>
                 <li class="nav-item">
                  <%= link_to about_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-home"></i>About
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to items_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-users"></i>商品一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to  new_customer_registration_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-book-open"></i>新規登録
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_customer_session_path,　class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-out-alt"></i>ログイン
                  <% end %>
                <% end %>
              </ul>
            </div>
          </table>
        </div>
      </nav>
    </header>
    <%= flash[:alert] %>
   <%= yield %>
  </body>

</html>